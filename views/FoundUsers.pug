html
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title Find Users
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css')
        link(rel='stylesheet' href='/css/viewMovie.css')
    body
        //- Nav Bar
        include ../views/partials/welcomeNavBar
        if session.loggedIn
            //- Username and type of user
            .container-fluid.title.background
                h1#titleName Users
            br
            ul
                if userArray.length===0
                    li Sorry. We could not find results to match your search.
                else
                    each item in userArray
                        li
                            a(href='users/'+item.username) #{item.username}
            include ../views/partials/footer