html
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title Find Movies
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css')
        link(rel='stylesheet' href='/css/viewMovie.css')

    body
        //- Nav Bar
        include ../views/partials/welcomeNavBar
        if session.loggedIn

            .container-fluid.title.background
                h1#titleName Movies
                form(action='/movies' method='GET')
                    .form-row
                        .col-md-2
                            label(for='findTitle') Title:
                            input#inpageTitle.form-control(type='text' name='title')
                        .col-md-2
                            label(for='selectGenre') Genre:
                            select#selectGenre.form-control(name='genre')
                                option(hidden='' disabled='' selected='' value='')  -- Select an option -- 
                                option(value='') none
                                each item in genreList
                                    option #{item}
                        .col-md-2
                            label(for='year') Year release date:    
                            input#year(type='text' name='year' pattern="[0-9]{4}")
                        .col-md-2
                            label(for='selectRating') Minimum review rating:
                            select#selectRating.form-control(name ='minRating')
                                    option(hidden='' disabled='' selected='' value='')  -- Select an option -- 
                                    option(value='') none
                                    option 1
                                    option 2
                                    option 3
                                    option 4
                                    option 5
                                    option 6
                                    option 7
                                    option 8
                                    option 9
                                    option 10
                        .col-md-2
                            br
                            input#advFind(type='submit' value='Search')
                        .col-md2
                            br
                            a(href='/searchMovies') Back to Regular Search
                        br
            br
            ul
                if moviesArray.length===0
                    li Sorry we could not find results that match your search.
                else
                    each item in moviesArray
                        li
                            a(href='movies/'+item.title) #{item.title}

            include ../views/partials/footer