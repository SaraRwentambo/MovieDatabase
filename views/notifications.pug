html
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title Notifications
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css')
        link(rel='stylesheet' href='/css/viewMovie.css')

    body
        //- Nav Bar
        include ../views/partials/welcomeNavBar
        if session.loggedIn
            .container-fluid.title.background
                h1#titleName Notifications
            br
            ul
                if notifications.length===0
                    li You have no notifications. Yay :)
                else
                    each item in notifications
                        li
                            a(href='movies/'+item) #{item}
        
            include ../views/partials/footer