html
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title Find Users
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css')
        link(rel='stylesheet' href='/css/regularUser.css')
    body
        //- Nav Bar
        if session.loggedIn

            include ../views/partials/welcomeNavBar
            #user.jumbotron.text-center
                h1#userName Find a User !
                h5#type
                    | Search by username 
                    br
                    br
                //- Search for Users
                #browse.browse
                    form(action='/users' method="GET")
                        lable#browseMovie(for='text') Find User: 
                        input#text(type='text' name="name")
                        span#search
                        input#searchButton(type='submit' value="Find")                
            include ../views/partials/footer